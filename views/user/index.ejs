<%- include('../user/header.ejs'); %>
<% if (message != '') { %>
    <p class="text-center text-danger"><%= message %></p>
<% } %>
<div class="table-wrapper">
    <% if (users.length > 0) { %>
        <table class="table table-hovered">
            <thead class="head-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th scope="col">Active</th>
                    <th scope="col">Created</th>
                    <th scope="col">Modified</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => { %>
                    <tr>
                        <th scope="row"><%= user.id %></th>
                        <td scope="row"><%= user.first_name %></td>
                        <td scope="row"><%= user.last_name %></td>
                        <td scope="row"><%= user.email %></td>
                        <td scope="row">**********</td>
                        <td scope="row"><%= user.status %></td>
                        <td scope="row"><%= dateFormatter(user.created, 'yyyy-mm-dd') %></td>
                        <td scope="row"><%= dateFormatter(user.modified, 'yyyy-mm-dd') %></td>
                        <td>
                            <a href="/edit/<%= user.id %>" class="btn btn-small btn-success">Edit</a>
                            <a href="/delete/<%= user.id %>" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                <% }) %>
                <tr></tr>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No user found. Go <a href="/user/add">here</a> to add user.</p>
    <% } %>
</div>
</div>
</body>
</html>

